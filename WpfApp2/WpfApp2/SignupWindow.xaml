<Window x:Class="WpfApp2.SignupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Signup" Height="663" Width="546"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadow"
                          BlurRadius="15"
                          ShadowDepth="4"
                          Color="#66FCF1"
                          Opacity="1"/>
    </Window.Resources>

    <Grid Height="716" VerticalAlignment="Center" HorizontalAlignment="Center" Width="546">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0B0C10" Offset="0"/>
                <GradientStop Color="#1F2833" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="{StaticResource HighlightBrush}"
                CornerRadius="15"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Effect="{StaticResource DropShadow}"
                Width="370" Height="569"
                Margin="0,70,0,0">

            <StackPanel>
                <TextBlock Text="✍️ Create Your Account"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource AccentBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,20"/>

                <TextBlock Text="Username:"/>
                <TextBox x:Name="UsernameBox"/>

                <TextBlock Text="Password:"/>
                <PasswordBox x:Name="PasswordBox"/>

                <TextBlock Text="Email:"/>
                <TextBox x:Name="EmailBox"/>

                <Button Content="Signup"
                        Click="Signup_Click"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="45" Width="280"
                        Margin="0,20,0,20"/>

                <Button Content="Back to Login"
                        Click="BackToLogin_Click"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="45" Width="280"
                        Margin="0,20,0,20"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
