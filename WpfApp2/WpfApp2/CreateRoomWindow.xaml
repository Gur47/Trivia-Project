<Window x:Class="WpfApp2.CreateRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Room" Height="765" Width="546"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadow"
                          BlurRadius="15"
                          ShadowDepth="4"
                          Color="#66FCF1"
                          Opacity="1"/>
    </Window.Resources>

    <Grid Margin="-5,0,0,0" HorizontalAlignment="Left" Width="575">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0B0C10" Offset="0"/>
                <GradientStop Color="#1F2833" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="{StaticResource HighlightBrush}"
                CornerRadius="15"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{StaticResource DropShadow}" Height="613">

            <StackPanel>
                <TextBlock Text="🛠 Create New Room"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource AccentBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Room Name:" />
                <TextBox Name="RoomNameBox" Width="300"/>

                <TextBlock Text="Max Players:" />
                <TextBox Name="MaxPlayersBox" Width="300"/>

                <TextBlock Text="Number of Questions:" />
                <TextBox Name="NumQuestionsBox" Width="300"/>

                <TextBlock Text="Answer Timeout (seconds):" />
                <TextBox Name="TimeoutBox" Width="300"/>

                <Button Content="Create Room"
                        Click="CreateRoom_Click"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="40" Width="300"
                        Margin="0,15,0,0"/>

                <Button Content="Back"
                        Click="Back_Click"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="40" Width="300"
                        Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
