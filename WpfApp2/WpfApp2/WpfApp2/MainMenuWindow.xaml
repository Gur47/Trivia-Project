<Window x:Class="WpfApp2.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Menu" Height="300" Width="300">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
        <Button Content="Join Room" Width="200" Height="25" Margin="0,15" Click="JoinRoom_Click"/>
        <Button Content="Create Room" Width="200" Height="25" Margin="0,15" Click="CreateRoom_Click"/>
        <Button Content="Statistics" Width="200" Height="25" Margin="0,15"/>
        <Button Content="Exit" Width="200" Height="25" Margin="0,15" Click="Exit_Click"/>
    </StackPanel>
</Window>
