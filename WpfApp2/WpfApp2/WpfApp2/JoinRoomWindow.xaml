<Window x:Class="WpfApp2.JoinRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Join Room" Height="400" Width="400">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
        <TextBlock Text="Available Rooms:" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
        <ListBox Name="RoomsListBox" Width="300" Height="200" Margin="0,0,0,10"/>
        <Button Content="Join Room" Width="300" Margin="0,10" Click="JoinRoom_Click"/>
        <Button Content="Back" Width="300" Click="Back_Click"/>
    </StackPanel>
</Window>
