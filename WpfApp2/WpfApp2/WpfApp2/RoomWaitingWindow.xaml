<Window x:Class="WpfApp2.RoomWaitingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Lobby" Height="400" Width="336">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
        <TextBlock Text="Players in Room:" FontWeight="Bold" FontSize="14"/>
        <TextBlock x:Name="RoomInfoTextBlock" FontSize="12" Margin="0,5"/>
        <ListBox x:Name="PlayersListBox" Width="250" Height="150" Margin="0,0,0,10"/>

        <Button x:Name="LeaveRoomButton" Content="Leave Room" Width="250" Margin="0,5" Click="LeaveRoom_Click" Visibility="Collapsed"/>
        <Button x:Name="StartButton" Content="Start Game" Width="250" Margin="0,10" Click="StartButton_Click" Visibility="Collapsed" />
        <Button x:Name="CloseRoomButton" Content="Close Room" Width="250" Margin="0,10"  Click="CloseRoom_Click" Visibility="Collapsed" />
    </StackPanel>
</Window>
