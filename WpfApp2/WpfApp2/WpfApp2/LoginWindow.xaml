<Window x:Class="WpfApp2.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Username:"/>
            <TextBox x:Name="UsernameBox" Margin="0,5"/>
            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5"/>
            <Button Content="Login" Margin="0,10" Click="Login_Click"/>
            <Button Content="Go to Signup" Width="180" Height="25" Margin="0,20,0,0" Click="GoToSignup_Click"/>
        </StackPanel>
    </Grid>
</Window>