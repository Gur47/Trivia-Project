<Window x:Class="WpfApp2.JoinRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="663" Width="546"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadow"
                          BlurRadius="15"
                          ShadowDepth="4"
                          Color="#66FCF1"
                          Opacity="1"/>
    </Window.Resources>

    <Grid Margin="0,1,0,-473">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0B0C10" Offset="0"/>
                <GradientStop Color="#1F2833" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="{StaticResource HighlightBrush}"
                CornerRadius="15"
                Padding="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Effect="{StaticResource DropShadow}" Height="482" Margin="65,88,0,0">

            <StackPanel>
                <TextBlock Text="📡 Available Rooms"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource AccentBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,20"/>

                <ListBox Name="RoomsListBox"
                         Width="350" Height="200"
                         Background="{StaticResource BackgroundBrush}"
                         BorderBrush="{StaticResource AccentBrush}"
                         BorderThickness="2"
                         Foreground="{StaticResource TextBrush}"
                         FontSize="16"
                         Margin="0,0,0,20">
                </ListBox>

                <Button Content="Join Room"
                        Click="JoinRoom_Click"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="45" Width="300"
                        Margin="0,10,0,10"/>

                <Button Content="Back"
                        Click="Back_Click"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="45" Width="300"
                        Margin="0,15,0,10"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
