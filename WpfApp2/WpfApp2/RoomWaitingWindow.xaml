<Window x:Class="WpfApp2.RoomWaitingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="700" Width="546"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadow"
                          BlurRadius="15"
                          ShadowDepth="4"
                          Color="#66FCF1"
                          Opacity="1"/>
    </Window.Resources>

    <Grid Margin="0,0,0,-107">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0B0C10" Offset="0"/>
                <GradientStop Color="#1F2833" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="{StaticResource HighlightBrush}"
                CornerRadius="15"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Effect="{StaticResource DropShadow}" Height="504" Margin="0,99,0,0">

            <StackPanel>
                <TextBlock Text="🎮 Players in Room:"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource AccentBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock x:Name="RoomInfoTextBlock"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <ListBox x:Name="PlayersListBox"
                         Width="300"
                         Height="180"
                         Margin="0,0,0,20"
                         Background="{StaticResource BackgroundBrush}"
                         BorderBrush="{StaticResource AccentBrush}"
                         BorderThickness="1"
                         Foreground="{StaticResource TextBrush}"/>

                <Button x:Name="LeaveRoomButton"
                        Content="Leave Room"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="300" Height="40"
                        Click="LeaveRoom_Click"
                        Visibility="Collapsed"/>

                <Button x:Name="StartButton"
                        Content="Start Game"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="300" Height="40"
                        Margin="0,10,0,0"
                        Click="StartButton_Click"
                        Visibility="Collapsed"/>

                <Button x:Name="CloseRoomButton"
                        Content="Close Room"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="300" Height="40"
                        Margin="0,10,0,0"
                        Click="CloseRoom_Click"
                        Visibility="Collapsed"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
