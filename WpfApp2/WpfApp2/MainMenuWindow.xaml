<Window x:Class="WpfApp2.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="663" Width="546"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadow"
                          BlurRadius="15"
                          ShadowDepth="4"
                          Color="#66FCF1"
                          Opacity="1"/>
    </Window.Resources>

    <Grid Margin="-24,0,0,-1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0B0C10" Offset="0"/>
                <GradientStop Color="#1F2833" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="{StaticResource HighlightBrush}"
                CornerRadius="15"
                Padding="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Effect="{StaticResource DropShadow}" Height="480" Width="370" Grid.ColumnSpan="2" Margin="104,70,0,0">

            <StackPanel>
                <TextBlock Text="🏠 Main Menu"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource AccentBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,20"/>

                <Button Content="Join Room"
                        Click="JoinRoom_Click"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="50" Width="280"
                        Margin="0,15,0,20"/>

                <Button Content="Create Room"
                        Click="CreateRoom_Click"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="50" Width="280"
                        Margin="0,20,0,20"/>

                <Button Content="Statistics"
                        Click="Statistics_Click"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="50" Width="280"
                        Margin="0,20,0,20"/>

                <Button Content="Exit"
                        Click="Exit_Click"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="50" Width="280"
                        Margin="0,20,0,20"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
