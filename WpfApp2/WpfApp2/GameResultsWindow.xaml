<Window x:Class="WpfApp2.GameResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Results"
        Height="600" Width="800"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DropShadowEffect x:Key="ResultsShadow"
                          BlurRadius="15"
                          ShadowDepth="4"
                          Color="#66FCF1"
                          Opacity="1"/>
    </Window.Resources>

    <Grid>
        <Border Background="{StaticResource HighlightBrush}"
                CornerRadius="15"
                Padding="20"
                Margin="30"
                Effect="{StaticResource ResultsShadow}">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">

                <TextBlock Text="🏆 Game Results 🏆"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource AccentBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <ListView Name="ResultsListView"
                          Margin="0,0,0,10"
                          FontSize="14"
                          Width="470"
                          Background="{StaticResource BackgroundBrush}"
                          BorderBrush="{StaticResource AccentBrush}"
                          BorderThickness="2"
                          Effect="{StaticResource ResultsShadow}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="🏅 Rank" Width="100" DisplayMemberBinding="{Binding Rank}" />
                            <GridViewColumn Header="👤 Username" Width="140" DisplayMemberBinding="{Binding username}" />
                            <GridViewColumn Header="✅ Correct" Width="120" DisplayMemberBinding="{Binding correctAnswers}" />
                            <GridViewColumn Header="⏱ Time" Width="100" DisplayMemberBinding="{Binding totalTime}" />
                        </GridView>
                    </ListView.View>
                </ListView>

                <Button Content="Back to Menu"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"
                        Width="180"
                        Height="46"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="BackToMenu_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
