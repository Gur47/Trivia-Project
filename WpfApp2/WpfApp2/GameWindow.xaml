<Window x:Class="WpfApp2.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game"
        Height="600" Width="600"
        WindowStartupLocation="CenterScreen"
    Background="{StaticResource BackgroundBrush}">
    <!--AllowsTransparency="True"
        WindowStyle="None">-->

    <Window.Resources>
        <DropShadowEffect x:Key="GameShadow"
                          BlurRadius="15"
                          ShadowDepth="4"
                          Color="#66FCF1"
                          Opacity="1"/>
    </Window.Resources>

    <Grid>
        <Border Background="{StaticResource HighlightBrush}"
                CornerRadius="15"
                Padding="20"
                Margin="30"
                Effect="{StaticResource GameShadow}">

            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">

                <TextBlock Text="🧠 Trivia Game" FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource AccentBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock x:Name="QuestionTextBlock"
                           Text="Question here"
                           FontSize="20"
                           TextWrapping="Wrap"
                           Margin="0,0,0,15"
                           TextAlignment="Center"/>

                <TextBlock x:Name="StatusTextBlock"
                           FontSize="16"
                           Foreground="Gray"
                           TextAlignment="Center"/>

                <TextBlock x:Name="TimerTextBlock"
                           FontSize="16"
                           Foreground="DarkRed"
                           TextAlignment="Center"
                           Margin="0,5,0,10"/>

                <ListBox x:Name="AnswersListBox"
                         SelectionMode="Single"
                         Margin="0,0,0,20"
                         FontSize="16"
                         Background="{StaticResource BackgroundBrush}"
                         BorderBrush="{StaticResource AccentBrush}"
                         BorderThickness="2"
                         Effect="{StaticResource GameShadow}"
                         Width="400"
                         HorizontalAlignment="Center"/>

                <Button x:Name="SubmitAnswerButton"
                        Content="Submit Answer"
                        Margin="0,25,0,10"
                        Click="SubmitAnswer_Click"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Height="45"
                        Width="220"
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
